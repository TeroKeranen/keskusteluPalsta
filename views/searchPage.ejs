<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/nav.ejs') %>

    <main class="post-page">
      <div class="posts-container">
        <% post.forEach((item) => { %>
        <article class="single-post">
          <div class="name-date">
            <p>Created by <%= item.username %></p>
            <p><%= item.date %></p>
          </div>
          <div class="post">
            <h1><%=item.title %></h1>
            <p><%= item.content.substring(0,20) + " ..." %></p>
            <a href="/secret/<%= item._id %>">Read more</a>
          </div>
        </article>
        <%}) %>
      </div>
    </main>
  </body>

  <script></script>
</html>
